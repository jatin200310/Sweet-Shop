
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/backend/build/sweet_shop",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
